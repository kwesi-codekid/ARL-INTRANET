SMS_API_KEY=""
SMS_USERNAME=""

# Email Provider (Resend)
EMAIL_PROVIDER="resend"
EMAIL_API_KEY=""
EMAIL_FROM="noreply@arl.com"
EMAIL_FROM_NAME="ARL Intranet"

# Claude AI (Anthropic)
